{
  "$id": "https://meta-mart.org/schema/email/smtpSettings.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SmtpSettings",
  "description": "This schema defines the SMTP Settings for sending Email",
  "type": "object",
  "javaType": "org.metamart.schema.email.SmtpSettings",
  "properties": {
    "emailingEntity": {
      "description": "Emailing Entity",
      "type": "string",
      "default": "MetaMart"
    },
    "supportUrl": {
      "description": "Support Url",
      "type": "string",
      "default": "https://slack.meta-mart.org"
    },
    "enableSmtpServer": {
      "description": "If this is enable password will details will be shared on mail",
      "type": "boolean",
      "default": false
    },
    "metaMartUrl": {
      "description": "Metamart Server Endpoint",
      "type": "string"
    },
    "senderMail": {
      "description": "Mail of the sender",
      "type": "string"
    },
    "serverEndpoint": {
      "description": "Smtp Server Endpoint",
      "type": "string"
    },
    "serverPort": {
      "description": "Smtp Server Port",
      "type": "integer"
    },
    "username": {
      "description": "Smtp Server Username",
      "type": "string"
    },
    "password": {
      "description": "Smtp Server Password",
      "type": "string"
    },
    "transportationStrategy": {
      "type": "string",
      "enum": ["SMTP", "SMTPS", "SMTP_TLS"],
      "default": "SMTP"
    },
    "templatePath": {
      "type": "string"
    },
    "templates": {
      "type": "string",
      "enum": ["metamart", "digitrans"],
      "default": "metamart"
    }
  },
  "additionalProperties": false,
  "required": ["serverEndpoint", "serverPort", "senderMail", "metaMartUrl"]
}